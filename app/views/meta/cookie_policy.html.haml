- page_title = title(t('.title'))

#content.section--primary{:tabindex => "0"}
  .container
    %h1= page_title
    %p= t('.cookie.definition')

%section
  .container
    %h2= t('.subtitle.ukparliament')
    %p= t('.cookie.explanations.ukparliament')
    %p= t('.cookie.anonymous_statement')

    %h3= t('.which_cookies')
    %table
      %thead
        %tr
          %th= t('.cookie_table.meta.name')
          %th= t('.cookie_table.meta.purpose')
          %th= t('.cookie_table.meta.expires')
      %tbody
        %tr
          %td UK_Parliament__seen_cookie_message
          %td= t('.cookie_table.explanations.parliament.cookiebanner')
          %td= t('.cookie_table.meta.expiration.days', count: 28)
        %tr
          %td _beta_parliament_session
          %td= t('.cookie_table.explanations.parliament.session')
          %td= t('.cookie_table.meta.expiration.session')

